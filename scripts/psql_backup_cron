#!/bin/bash

############################################
# Этот bash-скрипт предназначен
# для запуска бекапа БД postgresql
# каждые 3 дня, бекапы старше 15 дней удаляются
############################################

set -e

crontab -e

0 3 */3 * * ./psql_backup >> /var/devora/logs/psql_backup.log 2>&1
